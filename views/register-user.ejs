<!DOCTYPE html>

<!-- ADMIN -->

<html lang="pt-br">

    <head>
        <%- include('partials/head'); %>
        <title> HealthTrack: Registrar Usu치rio</title>
    </head>

    <body>

        <%- include('partials/header', {initials}); %>

        <nav class="nav-primary">
            <% const currentPage = 'register-user'; %>
            <%- include('partials/admin-sidebar', {currentPage}); %>
        </nav>

        <div class="main-content">
            <b class="main-title">Registrar Usu치rio</b>
            <form action="/register" method="post">
                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputName">Nome <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" id="inputName" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputLastName">Sobrenome <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" id="inputLastName" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputUsername">Nome de Usu치rio <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" id="inputUsername" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputEmail">E-mail <span class="required-color">*</span></label>
                        <input autocomplete="off" type="text" class="form-control" id="inputEmail" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-group form-content row">
                    <div class="col">
                        <label for="inputUserPassword">Senha do Usu치rio <span class="required-color">*</span></label>
                        <input autocomplete="off" type="password" class="form-control" id="inputUserPassword" placeholder="Digite aqui..." required>
                    </div>
                    <div class="col">
                        <label for="inputAdminPassword">Senha do Administrador<span class="required-color">*</span></label>
                        <input autocomplete="off" type="password" class="form-control" id="inputAdminPassword" placeholder="Digite aqui..." required>
                    </div>
                </div>

                <div class="form-button">
                    <button type="submit" class="btn btn-primary background-dark-green">Cadastrar</button>
                </div>
              </form>
        </div>

    </body>

</html>